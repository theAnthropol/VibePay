{
  "name": "vibepay",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:dev": "npx wrangler pages dev .vercel/output/static --compatibility-date=2024-04-01 --compatibility-flag=nodejs_compat",
    "pages:deploy": "npm run pages:build && npx wrangler pages deploy .vercel/output/static",
    "db:create": "npx wrangler d1 create vibepay-db",
    "db:migrate": "npx wrangler d1 execute vibepay-db --file=./schema.sql",
    "db:migrate:local": "npx wrangler d1 execute vibepay-db --file=./schema.sql --local"
  },
  "dependencies": {
    "next": "15.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "stripe": "^15.5.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.11.0",
    "@cloudflare/workers-types": "^4.20240512.0",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vercel": "47.0.4",
    "wrangler": "^3.57.0"
  }
}
